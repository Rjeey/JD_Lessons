<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC ""  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping  package="by.pvt.pojo">
    <class name="Company">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="companyName"/>
        <property name="siteUrl"/>

        <component name="homeAddress" class="Address">
            <property name="city" column="homeCity"/>
            <property name="street" column="homeStreet"/>
            <property name="houseNumber" column="homeNumber"/>
            <property name="officeNumber" column="officeHome"/>
        </component>

        <component name="legalAddress" >
            <property name="city"/>
            <property name="street"/>
            <property name="houseNumber"/>
            <property name="officeNumber"/>
        </component>

        <joined-subclass name="Branch">
            <key column="id"></key>
            <property name="branchName"/>
            <property name="branchDirector"/>
        </joined-subclass>

        <joined-subclass name="HeadQuarter">
            <key column="id"></key>
            <property name="derectorName"/>
            <property name="bankAccount"/>
        </joined-subclass>

    </class>


</hibernate-mapping>